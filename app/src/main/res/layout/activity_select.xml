<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/liner">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|right|top"
        android:layout_marginRight="20dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Сохранить выборку"
            android:id="@+id/Save"
            android:layout_column="0"
            android:textSize="10sp"
            android:background="#228B22"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_marginTop="10dp"></Button>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Загрузить выборку"
            android:id="@+id/Load"
            android:layout_column="1"
            android:textSize="10sp"
            android:background="#228B22"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_marginTop="10dp"></Button>
    </LinearLayout>

    <ScrollView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/ValuesSampleXView"
                android:layout_weight="2"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textIsSelectable="false"
                android:text="X"
                android:gravity="center" ></TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/ValuesSampleYView"
                android:layout_weight="2"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textIsSelectable="false"
                android:text="Y"
                android:gravity="center"
                android:nestedScrollingEnabled="false"
                android:layout_marginLeft="50dp"></TextView>

        </GridLayout>
    </ScrollView>


</LinearLayout>